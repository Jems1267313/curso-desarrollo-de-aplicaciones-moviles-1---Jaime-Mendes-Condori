<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Views.TiendaEditPage">
    <StackLayout Padding="20">
        <Label Text="Editar Tienda" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="NombreTiendaEntry" Placeholder="Nombre de la Tienda" />
        <Entry x:Name="UbicacionEntry" Placeholder="Ubicación" />
        <Entry x:Name="Ubicacion1Entry" Placeholder="Ubicación 1" />
        <Entry x:Name="Ubicacion2Entry" Placeholder="Ubicación 2" />
        <Entry x:Name="TituloEntry" Placeholder="Título" />
        <Button Text="Guardar" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>
