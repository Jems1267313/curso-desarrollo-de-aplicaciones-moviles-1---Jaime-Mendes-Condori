<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Views.CompraEditPage">
    <StackLayout Padding="10">
        <Label Text="Tipo de Entrega"/>
        <Entry x:Name="TipoEntregaEntry" Text="{Binding TipoEntrega}" Placeholder="Tipo de Entrega"/>

        <Label Text="Fecha de Compra"/>
        <DatePicker x:Name="FechaCompraPicker" Date="{Binding FechaCompra}"/>

        <Label Text="Precio Total"/>
        <Entry x:Name="PrecioTotalEntry" Text="{Binding PrecioTotal}" Keyboard="Numeric"/>

        <Button Text="Guardar" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>
